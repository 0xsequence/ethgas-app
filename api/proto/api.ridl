webrpc = v1

name = api
version = v0.2.0

message Version
  - webrpcVersion: string
  - schemaVersion: string
  - schemaHash: string
  - appVersion: string

message SuggestedGasPrice
  - blockNum: uint64
  - blockTime: uint64
  - instant: uint64
  - fast: uint64
  - normal: uint64
  - slow: uint64

message GasStat
  - blockNum: uint64
  - blockTime: uint64
  - max: uint64
  - average: uint64
  - min: uint64

service ETHGas
  - Ping() => (ok: bool)
  - Version() => (version: Version)

  - SuggestedGasPrice() => (suggestedGasPrice: SuggestedGasPrice)

  - AllSuggestedGasPrices(count?: uint) => (suggestedGasPrices: []SuggestedGasPrice)
  - AllGasStats(count?: uint) => (gasStats: []GasStat)
  - GasPriceHistory() => (gasPriceHistory: map<uint64,[]uint64>)
